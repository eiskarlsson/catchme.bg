                                @Html.ValidationMessageFor(m => m.Profile.SelectedBodyType, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </fieldset>
                </div>
                <div class="col-sm">
                    <fieldset class="border p-2">
                        <legend class="w-auto">Habits:</legend>
                        <div class="form-group row">
                            @Html.LabelFor(m => m.Profile.SelectedSmokes, htmlAttributes: new { @class = "col-sm-5 col-form-label" })
                            <div class="col-sm-5">
                                @Html.DropDownListFor(m => m.Profile.SelectedSmokes, Model.SmokesItems, "Select Smokes", new { @class = "form-control", id = "ageDDL" })
                                @Html.ValidationMessageFor(m => m.Profile.SelectedSmokes, "", new { @class = "text-danger" })
