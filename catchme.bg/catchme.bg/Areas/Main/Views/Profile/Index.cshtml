@model catchme.bg.Models.ProfileViewModel
@{
    ViewData["Title"] = "Profile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Profile</h2>

<hr />

<div>

    @using (Html.BeginForm("Index", "Profile", FormMethod.Post, new { @class = "", enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()
        <img src="@Url.Action("UserPhotos", "Home", new { area = "Main" } )" style="width:160px;height:160px; background: #FFFFFF;margin: auto;-moz-border-radius: 60px;
         border-radius: 100px;padding: 6px;box-shadow: 0px 0px 20px #888;" />
        <div class="form-group">
            <label asp-for="UserPhoto" class="col-md-2 form-control"></label>
            <div class="col-md-10">

                <input asp-for="UserPhoto" type="file" name="UserPhoto" id="fileUpload" accept=".png,.jpg,.jpeg,.gif,.tif" />

            </div>
        </div>
        <div class="container">
            <div class="row">
                <div class="col-sm">
                    <fieldset class="border p-2">
                        <legend class="w-auto">General:</legend>
                        <div class="form-group row">
                            @Html.LabelFor(m => m.Profile.SelectedAge, htmlAttributes: new { @class = "col-sm-5 col-form-label" })
                            <div class="col-sm-5">
                                @Html.DropDownListFor(m => m.Profile.SelectedAge, Model.AgeItems, "Select Age", new { @class = "form-control", id = "ageDDL" })
                                @Html.ValidationMessageFor(m => m.Profile.SelectedAge, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group row">
                            @Html.LabelFor(m => m.Profile.SelectedGender, htmlAttributes: new { @class = "col-sm-5 col-form-label" })
                            <div class="col-sm-5">
                                @Html.DropDownListFor(m => m.Profile.SelectedGender, Model.GenderItems, "Select Gender", new { @class = "form-control", id = "genderDDL" })
                                @Html.ValidationMessageFor(m => m.Profile.SelectedGender, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group row">
                            @Html.LabelFor(m => m.Profile.SelectedLookingFor, htmlAttributes: new { @class = "col-sm-5 col-form-label" })
                            <div class="col-sm-5">
                                @Html.DropDownListFor(m => m.Profile.SelectedLookingFor, Model.LookingForItems, "Select Looking For", new { @class = "form-control", id = "ageDDL" })
                                @Html.ValidationMessageFor(m => m.Profile.SelectedLookingFor, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group row">
                            @Html.LabelFor(m => m.Profile.SelectedMaritalStatus, htmlAttributes: new { @class = "col-sm-5 col-form-label" })
                            <div class="col-sm-5">
                                @Html.DropDownListFor(m => m.Profile.SelectedMaritalStatus, Model.MaritalStatusItems, "Select Marital Status", new { @class = "form-control", id = "ageDDL" })
                                @Html.ValidationMessageFor(m => m.Profile.SelectedMaritalStatus, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group row">
                            @Html.LabelFor(m => m.Profile.SelectedChildren, htmlAttributes: new { @class = "col-sm-5 col-form-label" })
                            <div class="col-sm-5">
                                @Html.DropDownListFor(m => m.Profile.SelectedChildren, Model.ChildrenItems, "Select Children", new { @class = "form-control", id = "ageDDL" })
                                @Html.ValidationMessageFor(m => m.Profile.SelectedChildren, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </fieldset>
                </div>
                <div class="col-sm">
                    <fieldset class="border p-2">
                        <legend class="w-auto">Personalia:</legend>
                        <div class="form-group row">
                            @Html.LabelFor(m => m.Profile.SelectedEyeColor, htmlAttributes: new { @class = "col-sm-5 col-form-label" })
                            <div class="col-sm-5">
