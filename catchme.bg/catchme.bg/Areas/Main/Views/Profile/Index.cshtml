                                @Html.ValidationMessageFor(m => m.Profile.SelectedReligion, "", new { @class = "text-danger" })
                            </div>
                        </div>

                    </fieldset>
                </div>
            </div>
            <div class="row">

                <div class="col-sm">

                    <fieldset class="border p-2">
                        <legend class="w-auto">Social:</legend>
                        <div class="form-group row">
                            @Html.LabelFor(m => m.Profile.SelectedEducation, htmlAttributes: new { @class = "col-sm-5 col-form-label" })
                            <div class="col-sm-5">
                                @Html.DropDownListFor(m => m.Profile.SelectedEducation, Model.EducationItems, "Select Education", new { @class = "form-control", id = "ageDDL" })
                                @Html.ValidationMessageFor(m => m.Profile.SelectedEducation, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group row">
                            @Html.LabelFor(m => m.Profile.SelectedEthnicity, htmlAttributes: new { @class = "col-sm-5 col-form-label" })
                            <div class="col-sm-5">
                                @Html.DropDownListFor(m => m.Profile.SelectedEthnicity, Model.EthnicityItems, "Select Ethnicity", new { @class = "form-control", id = "ageDDL" })
                                @Html.ValidationMessageFor(m => m.Profile.SelectedEthnicity, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group row">
                            @Html.LabelFor(m => m.Profile.SelectedLanguages, htmlAttributes: new { @class = "col-sm-5 col-form-label" })
                            <div class="col-sm-5">
                                @Html.DropDownListFor(m => m.Profile.SelectedLanguages, Model.LanguagesItems, "Select Languages", new { @class = "form-control", id = "ageDDL" })
                                @Html.ValidationMessageFor(m => m.Profile.SelectedLanguages, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group row">
                            @Html.LabelFor(m => m.Profile.SelectedPets, htmlAttributes: new { @class = "col-sm-5 col-form-label" })
                            <div class="col-sm-5">
                                @Html.DropDownListFor(m => m.Profile.SelectedPets, Model.PetsItems, "Select Pets", new { @class = "form-control", id = "ageDDL" })
                                @Html.ValidationMessageFor(m => m.Profile.SelectedPets, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </fieldset>
                </div>
                <div class="col-sm">
                    <fieldset class="border p-2">
                        <legend class="w-auto">Extra:</legend>
                        @Html.TextBoxFor(m => m.ID, new { @class = "hidden" })
                        @Html.TextBoxFor(m => m.ProfileUser.Id, new { @class = "hidden", @readonly = "readonly" })
                        @Html.TextBoxFor(m => m.Profile.ID, new { @class = "hidden", @readonly = "readonly" })
                        @Html.TextBoxFor(m => m.Profile.ProfileUserId, new { @class = "hidden", @readonly = "readonly" })
                        <div class="form-group row">
                            <label class="col-sm-5 col-form-label">Details</label>
                            <div class="col-sm-5">
                                @Html.TextBoxFor(m => m.Profile.Details, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-sm-5 col-form-label">Job</label>
                            <div class="col-sm-5">
                                @Html.TextBoxFor(m => m.Profile.Job, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-sm-5 col-form-label">Job Description</label>
                            <div class="col-sm-5">
                                @Html.TextBoxFor(m => m.Profile.JobDescription, new { @class = "form-control" })
                            </div>
                        </div>

                        <div class="form-group row">
                            <label class="col-sm-5 col-form-label">Education Description</label>
                            <div class="col-sm-5">
                                @Html.TextBoxFor(m => m.Profile.EducationDescription, new { @class = "form-control" })
                            </div>
                        </div>
                    </fieldset>
                </div>

            </div>
            <div class="row">
                <div class="col-sm">
                    @Html.TextBoxFor(m => m.Profile.DateCreated, new { @class = "hidden", @readonly = "readonly" })
                    @Html.TextBoxFor(m => m.Profile.DateLastChange, new { @class = "hidden", @readonly = "readonly" })
                    <br />
                    <input type="submit" value="Submit" class="btn btn-secondary" />
                </div>
            </div>
        </div>



    }


</div>