@model catchme.bg.Models.Evaluation

@{
    ViewData["Title"] = "MBTI Test Step 3";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4>MBTI Questions 50-70/70</h4>
<hr />

<div>

    @using (Html.BeginForm())
    {
        @Html.TextBoxFor(m => m.UserName, new { @class = "hidden", @readonly = "readonly" })
        for (int i = 0; i < Model.Questions.Count(u => u.Language == "bg"); i++)
        {
            @Html.TextBoxFor(m => m.Questions[i].QuestionText, new { @class = "form-control", @readonly = "readonly" })

            @Html.RadioButtonFor(m => m.Answers[i].SelectedAnswer, 1, new { @class = "form-control" }) @Html.TextBoxFor(m => m.Questions[i].AnswerText1, new { @class = "form-control", @readonly = "readonly" })

            @Html.RadioButtonFor(m => m.Answers[i].SelectedAnswer, 2, new { @class = "form-control" }) @Html.TextBoxFor(m => m.Questions[i].AnswerText2, new { @class = "form-control", @readonly = "readonly" })

            @Html.TextBoxFor(m => m.Answers[i].ID, new { @class = "hidden", @readonly = "readonly" })

            @Html.TextBoxFor(m => m.Answers[i].QuestionID, new { @class = "hidden", @readonly = "readonly" })

            @Html.TextBoxFor(m => m.Answers[i].UserName, new { @class = "hidden", @readonly = "readonly" })
            <br />
        }
        <input type="submit" value="Submit" />
    }



</div>
